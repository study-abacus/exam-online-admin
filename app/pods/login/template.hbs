<div class="container">
    <Input
        class="form-control"
        type="text"
        placeholder="Username"
        @value={{username}}
    />
    <Input
        class="form-control"
        type="password"
        placeholder="Password"
        @value={{password}}
    />
    <button
        type="button"
        class="btn btn-primary px-4"
        {{action (perform login)}}
    >
        Login
    </button>
</div>