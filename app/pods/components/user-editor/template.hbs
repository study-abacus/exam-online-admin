<form class='card card-body'>
  <div class='row mb-3'>
    <label for='name' class='col-sm-2 col-form-label'>Name</label>
    <div class='col-sm-10'>
      <Input
        type='text'
        class='form-control'
        id='name'
        @value={{this.args.user.name}}
      />
    </div>
  </div>
  <div class='row mb-3'>
    <label for='phone' class='col-sm-2 col-form-label'>Phone</label>
    <div class='col-sm-10'>
      <Input
        type='text'
        class='form-control'
        id='phone'
        @value={{this.args.user.phone}}
      />
    </div>
  </div>
  <div class='row mb-3'>
    <label for='username' class='col-sm-2 col-form-label'>Username</label>
    <div class='col-sm-10'>
      <Input
        type='text'
        class='form-control'
        id='username'
        @value={{this.args.user.userLocal.username}}
      />
    </div>
  </div>
  <div class='row mb-3'>
    <label for='password' class='col-sm-2 col-form-label'>Password</label>
    <div class='col-sm-10'>
      <Input
        type='text'
        class='form-control'
        id='password'
        @value={{this.args.user.userLocal.password}}
      />
    </div>
  </div>

  <Base::TaskButton
    @task={{this.saveUser}}
  >
    Save
  </Base::TaskButton>
</form>